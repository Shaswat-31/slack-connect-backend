generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRoles{
  user
}

model User {
  id        String             @id @default(auto()) @map("_id") @db.ObjectId
  email     String             @unique
  password  String
  name      String?
  role      UserRoles             @default(user)
  
  slack     SlackIntegration?

  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model SlackIntegration {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique @db.ObjectId // unique ensures only one SlackIntegration per user

  accessToken  String
  refreshToken String?
  scope        String?
  botUserId    String?
  teamId       String
  teamName     String
  userAccessToken  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}